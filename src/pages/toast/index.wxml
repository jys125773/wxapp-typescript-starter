<view class="container">
  <demo-block title="基础用法">
    <view>
      <button bind:tap="textToast">文字提示</button>
      <button bind:tap="longTextToast">长文字提示</button>
    </view>
  </demo-block>
  <demo-block title="加载提示">
    <view>
      <button bind:tap="loadToast">加载提示</button>
    </view>
  </demo-block>
  <demo-block title="成功/失败提示">
    <view>
      <button bind:tap="successToast">成功提示</button>
      <button bind:tap="failToast">失败提示</button>
    </view>
  </demo-block>
  <demo-block title="高级用法">
    <view>
      <button bind:tap="asyncToast">3秒后关闭</button>
    </view>
  </demo-block>
  <toast id="custom-toast" />
</view>