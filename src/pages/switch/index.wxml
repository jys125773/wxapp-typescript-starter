<view class="container">
  <demo-block title="基础用法">
    <ui-switch data-key="checked1" checked="{{ checked1 }}" bind:change="change" />
  </demo-block>
  <demo-block title="禁用状态">
    <ui-switch disabled data-key="checked2" checked="{{ checked2 }}" bind:change="change" />
  </demo-block>
  <demo-block title="加载状态">
    <ui-switch loading data-key="checked3" checked="{{ checked3 }}" bind:change="change" />
  </demo-block>
  <demo-block title="自定义大小">
    <ui-switch size="60rpx" data-key="checked4" checked="{{ checked4 }}" bind:change="change" />
  </demo-block>
  <demo-block title="自定义颜色">
    <ui-switch activeColor="red" inactiveColor="blue" data-key="checked5" checked="{{ checked5 }}" bind:change="change" />
  </demo-block>
</view>